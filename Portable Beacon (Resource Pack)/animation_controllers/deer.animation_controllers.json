{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.deer.everything": {
            "states": {
                "default": {
                    "animations": [
                        "idle"
                    ],
                    "transitions": [
                        {
                            "move": "query.is_moving"
                        },
                        {
                            "attack": "variable.has_target && variable.attack_time >= 0.1"
                        }
                    ]
                },
                "move": {
                    "animations": [
                        "walk"
                    ],
                    "transitions": [
                        {
                            "default": "query.all_animations_finished && !query.is_moving"
                        },
                        {
                            "mov_attack": "variable.has_target && variable.attack_time >= 0.1"
                        }
                    ]
                },
                "mov_attack": {
                    "animations": [
                        "walk_attack",
                        "walk"
                    ],
                    "transitions": [
                        {
                            "move": "query.is_moving && query.all_animations_finished"
                        },
                        {
                            "default": "!query.is_moving && query.all_animations_finished"
                        }
                    ]
                },
                "attack": {
                    "animations": [
                        "attack"
                    ],
                    "transitions": [
                        {
                            "move": "query.is_moving && query.all_animations_finished"
                        },
                        {
                            "default": "!query.is_moving && query.all_animations_finished"
                        }
                    ]
                }
            }
        }
    }
}